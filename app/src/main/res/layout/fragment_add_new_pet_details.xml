<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_add_new_pet_details_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_activity_files.MyPets.PetDetailsActivityFiles.AddNewPetDetailsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/removing_info_add_new_pet_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="35dp"
                android:background="#8EC5AD"
                android:text="@string/general"
                />


            <ImageView
                android:src="@drawable/ic_baseline_add_photo_alternate_24"
                android:id="@+id/imageViewAddNewPetDetailsFragment"
                android:scaleType="fitXY"
                android:layout_margin="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:minHeight="180dp"
                android:minWidth="180dp"
                android:maxWidth="180dp"
                android:maxHeight="180dp"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:padding="2dp"
                android:background= "#959595"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/name"
                />

            <EditText
                android:id="@+id/animalNameAddNewPetDetailsFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="exampleName"
                android:textAlignment="center"
                android:textSize="20dp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/type"
                />
            <EditText
                android:id="@+id/animalTypeAddNewPetDetailsFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="exampleType"
                />
            <TextView
                android:id="@+id/ageViewInfo_add_new_pet_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/age"
                />

            <EditText
                android:id="@+id/animalAgeAddNewPetDetailsFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:hint="exampleAge"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/birthday"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/animalBirthdayAddNewPetDetailsFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="@string/date_format"
                    android:textAlignment="center" />
                <ImageView
                    android:id="@+id/image_view_open_close_calendar_add_new_pet_details_fragment"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_baseline_arrow_downward_24"
                    />
            </RelativeLayout>

            <CalendarView
                android:id="@+id/calendarBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </CalendarView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/height"
                />
            <EditText
                android:id="@+id/animalHeightAddNewPetDetailsFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textSize="20dp"
                android:hint="exampleHeight"
                />
            <Button
                android:id="@+id/btn_addNewPetDetailsFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dodaj"
                />


        </LinearLayout>






    </RelativeLayout>

</ScrollView>