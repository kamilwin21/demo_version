<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diagnosis_position_layout_in_diagnosis_adapter_id_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/diagnosis_name_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:text="Badanie"

        />
    <TextView
        android:id="@+id/diagnosis_type_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textAlignment="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Type"
        />

    <TextView
        android:id="@+id/diagnosis_date_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="20dp"
        android:text="Data"
        />
    <TextView
        android:id="@+id/diagnosis_description_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:text="Opis"
        />


</LinearLayout>